  "database" : {
    "issues" : {
      "insert" : {
        "client" : ["title", "body", "category1", "category2", "user_id={current_user}", "created_at", "updated_at"]
      }
    },
    "experts" : {
      "insert" : {
        "all" : ["user_id", "company=null", "position=null", "verify=false", "created_at", "updated_at"]
      }
    },
    "messages" : {
      "insert" : {
        "login" : ["body", "sender_id", "receiver_id", "issue_id", "deleted", "created_at", "updated_at"]
      }
    },
    "notifications" : {
      "insert" : {
        "login" : ["user_id", "read_flag=false", "created_at", "updated_at"]
      },
      "update" : {
        "owner" : ["read_flag=true", "updated_at"]
      },
      "select" : {
        "login" : ["user_id", "read_flag=false"]
      }
    },
    "users" : {
      "update" : {
        "admin" : ["banned", "updated_at"]
      },
      "insert" : {
        "admin" : ["full_name", "description", "email", "picture", "type", "banned", "social_id", "facebook_link", "user_access_token", "created_at", "updated_at", "encrypted_password", "salt", "email_verify", "email_verify_code"]
      }
